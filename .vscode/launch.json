    {
        "name": "(gdb) Spustit",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/Tests/exl_TestMPEGDecoder.exe",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${fileDirname}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "gdb",
        "miDebuggerPath": "C:/MinGW/bin/gdb.exe",
        "setupCommands": [
            {
                "description": "Povolit přehledný výpis pro gdb",
                "text": "-enable-pretty-printing",
